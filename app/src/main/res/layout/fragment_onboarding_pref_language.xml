<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".view.MainActivity">

    <data>

        <import type="android.view.View"/>

        <variable
                name="lang"
                type="com.kotlindemo.model.LanguagePreference"/>
    </data>

    <RelativeLayout
            style="@style/ScreenRootContainer"
            android:orientation="vertical"
            android:padding="@dimen/margin_l">

        <RelativeLayout
                android:id="@+id/rlNavbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_button_actionbar_back"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="5sp"
                    android:text="Step 1 of 2"
                    android:textColor="#707070"
                    android:textSize="12sp"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/llTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlNavbar"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#111111"
                    android:textSize="24sp"
                    android:text="What are your preferred content languages?"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:text="You may choose more than one language"/>

            <include
                    layout="@layout/include_language_preference_button"
                    bind:languageName="@{`ENGLISH`}"
                    bind:isLanguageSelected="@{lang.ENGLISH}"
                    />

            <include
                    layout="@layout/include_language_preference_button"
                    bind:languageName="@{`CHINESE`}"
                    bind:isLanguageSelected="@{lang.CHINESE}"
                    />

            <include
                    layout="@layout/include_language_preference_button"
                    bind:languageName="@{`BHASA`}"
                    bind:isLanguageSelected="@{lang.BHASA}"
                    />

            <include
                    layout="@layout/include_language_preference_button"
                    bind:languageName="@{`TAMIL`}"
                    bind:isLanguageSelected="@{lang.TAMIL}"
                    />

        </LinearLayout>

        <Button
                android:id="@+id/btnLandingLoginSignup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_button_onboarding_prefrences_next"
                android:gravity="center"
                android:text="Next"
                android:enabled="@{lang.isValidSelection}"
                android:onClick="savLanguageSelection"
                android:textAllCaps="true"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/font_size_m"
                android:textStyle="bold"/>

    </RelativeLayout>
</layout>